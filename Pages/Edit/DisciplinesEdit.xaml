<Page x:Class="Practice.Pages.Edit.DisciplinesEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice.Pages.Edit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DisciplinesEdit">
    <UniformGrid Rows="10">
        <WrapPanel VerticalAlignment="Center">
            <Label Width="200">Имя</Label>
            <TextBox x:Name="NameTextBox" Width="600"></TextBox>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Center">
            <Label Width="200">Часы</Label>
            <TextBox x:Name="HoursTextBox" Width="600"></TextBox>
        </WrapPanel>
        <Border HorizontalAlignment="Center" Background="White" CornerRadius="5">
            <Button x:Name="ConfirmActionButton" Click="ConfirmActionButton_Click" Padding="10 5" FontWeight="Bold"  Foreground="#212121" BorderThickness="0" Background="Transparent">
                ПОДТВЕРДИТЬ ДЕЙСТВИЕ
            </Button>
        </Border>
    </UniformGrid>
</Page>
