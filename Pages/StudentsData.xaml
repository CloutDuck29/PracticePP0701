<Page x:Class="Practice.Pages.StudentsData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentsData">



    <DataGrid x:Name="StudentsDataGrid">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding id}" Header="ID"></DataGridTextColumn>
            <DataGridTextColumn Width="4*" Binding="{Binding FIO}" Header="ФИО"></DataGridTextColumn>
            <DataGridTextColumn Width="4*" Binding="{Binding Groups.Name}" Header="Группа"></DataGridTextColumn>
        </DataGrid.Columns>
    </DataGrid>
</Page>
