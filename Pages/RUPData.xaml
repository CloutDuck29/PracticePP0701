<Page x:Class="Practice.Pages.RUPData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RUPData">
    <DataGrid Grid.Row="1" x:Name="RUPDataGrid">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding id}" Header="ID"></DataGridTextColumn>
            <DataGridTextColumn Width="2*" Binding="{Binding Disciplines.Name}" Header="Дисциплина"></DataGridTextColumn>
            <DataGridTextColumn Width="2*" Binding="{Binding Semestr}" Header="Семестр"></DataGridTextColumn>
            <DataGridTextColumn Binding="{Binding TypeOfAttestation}" Header="Типа аттестации"></DataGridTextColumn>
            <DataGridTextColumn Binding="{Binding Teachers.FIO}" Header="ФИО препода"></DataGridTextColumn>
        </DataGrid.Columns>
    </DataGrid>
</Page>
