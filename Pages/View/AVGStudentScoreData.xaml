<Page x:Class="Practice.Pages.View.AVGStudentScoreData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice.Pages.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AVGStudentScoreData">
    <DataGrid Grid.Row="1" x:Name="AVGStudentScoreDataGrid">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding ID}" Header="ID"></DataGridTextColumn>
            <DataGridTextColumn Width="2*" Binding="{Binding Students.FIO}" Header="Студент"></DataGridTextColumn>
            <DataGridTextColumn Width="2*" Binding="{Binding AVGScore}" Header="Cредний бал"></DataGridTextColumn>
        </DataGrid.Columns>
    </DataGrid>
</Page>
