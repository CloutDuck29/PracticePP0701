<Page x:Class="Practice.Pages.View.SpecialitiesData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice.Pages.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SpecialitiesData">
    <DataGrid Grid.Row="1" x:Name="SpecialitiesDataGrid">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding id}" Header="ID"></DataGridTextColumn>
            <DataGridTextColumn Width="2*" Binding="{Binding Name}" Header="Специальность"></DataGridTextColumn>
        </DataGrid.Columns>
    </DataGrid>
</Page>
