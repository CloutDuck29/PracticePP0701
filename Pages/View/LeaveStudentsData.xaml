<Page x:Class="Practice.Pages.View.LeaveStudentsData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice.Pages.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LeaveStudentsData">
    <DataGrid Grid.Row="1" x:Name="LeaveStudentsDataGrid">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding ID}" Header="ID"></DataGridTextColumn>
            <DataGridTextColumn Width="2*" Binding="{Binding StudentID}" Header="айди студента"></DataGridTextColumn>
            <DataGridTextColumn Width="2*" Binding="{Binding FIO}" Header="Студент"></DataGridTextColumn>
            <DataGridTextColumn Width="2*" Binding="{Binding GroupID}" Header="Группа"></DataGridTextColumn>
            <DataGridTextColumn Width="2*" Binding="{Binding DateOfExpulsion}" Header="Отчислялся"></DataGridTextColumn>
        </DataGrid.Columns>
    </DataGrid>
</Page>
